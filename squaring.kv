BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
        Button:
            text: 'Square'
            font_size: 48
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(float(input_number.text))

        Label:
            id: output_label
            font_size: 48
            color: (255,0,255,1)

    Label:
        color: (1, 1, 0, 1)
        font_size: 48
        text: 'Enter a number and press "Square"'
