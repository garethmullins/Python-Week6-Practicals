<Label>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    color: 0, 0, 0.7, 1

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        # this layout is populated with (label) widgets in app code
        id: entriesBox
        cols: 1
        orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2
        Button:
            text: "Create Widgets"
            on_release: app.create_widgets()
        Button:
            text: "Clear Widgets!"
            on_release: app.clear_all()
