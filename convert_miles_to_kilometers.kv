<label>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    color: 0, 0, 0, 1

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '10'
            font_size: 48
            on_text: app.handle_change(0)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_change(1)
            Button:
                text: 'Down'
                on_press: app.handle_change(-1)

    # Button:
    #     text: 'Convert miles to km'
    #     on_press: app.handle_conversion()
    Label:
        id: output_label
        font_size: 48
        text: '16.0934'
